<nav class="navbar navbar-expand-lg navbar-dark">
  <a class="navbar-brand" href="#">
    <%= image_tag('lili.jpg', size: "64x36") =%>
  </a>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="#">Home<span class="sr-only"> <%= url_for 'todos' %> </span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Todo<span class="sr-only"> <%= url_for 'todos' %> </span></a>
      </li>
    </ul>
  </div>
</nav>

<div class="container-flex">
  <div class="container">
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <%= form_with(model: Todo.new) do |form| %>
          <%= form.text_field(:title, placeholder: 'new task') %>
        <% end %>
      </li>
      <% @todos.each do |todo| %>
        <li class="list-group-item"> 
          <%=todo.title=%> 
          <%= link_to 'Show', todo_path(todo) %>
          <%= link_to 'Delete', todo_path(todo), method: :delete %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
